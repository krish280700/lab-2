div.container
    div(class='d-flex justify-content-end')
        button(class='btn btn-primary') Add
    table.table
        thead
            tr
                th Contact ID
                th First Name
                th Last Name
                th Email address
                th Notes
                th actions
        tbody
            each item in contacts
                tr
                    td= item.id
                    td
                        a(href="/view") #{item.fName}
                    td= item.lName
                    td= item.email
                    td= item.notes
                    td 
                        button.btn.btn-secondary Edit
                        button.btn.btn-danger.ms-1 Delete
                    