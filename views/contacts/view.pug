extends ../layout

block content
    div.container
        div
            p 
                storng ID: #{contact.id}
            p 
                storng First Name: #{contact.fName}
            p 
                storng Last Name: #{contact.lName}
            p 
                storng Email: #{contact.email}
            p 
                storng Notes: #{contact.notes}
            p 
                storng Created: #{contact.modified}

        div.d-flex.align-items-end
            a.btn.btn-primary(href='/contacts/list') Back
            a.btn.btn-secondary.ms-2(href='/contacts/add') Edit
            a.btn.btn-danger.ms-2 Delete

